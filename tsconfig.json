{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "outDir": "build",
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "baseUrl": "./src",
    "paths": {
      "src/*": ["*"]
    }
  },
  "include": ["./src/**/*"]
}
